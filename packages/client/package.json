  "devDependencies": {
    "@bigcommerce/eslint-config": "^2.7.0",
    "@bigcommerce/eslint-config-catalyst": "workspace:^",
    "@types/node": "^18.17.12",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "graphql": "^16.8.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "tsup": "^6.7.0",
    "typescript": "^5.3.3"
  }
