{
  "name": "@bigcommerce/catalyst-client",
  "description": "BigCommerce API client for Catalyst.",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js,.cjs --max-warnings 0",
    "lint-fix": "eslint . --ext .ts,.js,.cjs --fix",
    "gen-types": "dotenv -e .env.local -- node scripts/types.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@bigcommerce/catalyst-configs": "workspace:^",
    "@bigcommerce/eslint-config": "^2.7.0",
    "@bigcommerce/eslint-config-catalyst": "workspace:^",
    "@genql/cli": "^4.0.4",
    "@types/node": "^18.17.5",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.33.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.1.6"
  }
}
