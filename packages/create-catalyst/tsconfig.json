{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
